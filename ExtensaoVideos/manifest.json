{
    "name": "Video Helper",
    "manifest_version": 3,
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "webRequest"
    ],
    "action": {
        "default_icon": {
            "16": "video.png",
            "24": "video.png",
            "32": "video.png"
        }
    },
    "host_permissions": [
        "https://*/"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "html2canvas.min.js",
                "content-script.js"
            ]
        }
    ]
}